<Window x:Class="LogisticCalculationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticCalculationWPF" xmlns:viewmodel="clr-namespace:LogisticCalculationWPF.ViewModel"
        Title="MainWindow" Height="650" Width="900" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <FontFamily x:Key="Roboto" >/Fonts/#Roboto</FontFamily>
    </Window.Resources>
    <Window.DataContext>
        <viewmodel:QoptDavkaViewModel/>
    </Window.DataContext>
    
    <Grid Name="MainGrid" Background="Transparent" Margin="-2">
        <Grid x:Name="Menu" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="565*"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="MenuStack" Orientation="Horizontal" Grid.RowSpan="2" Width="250" HorizontalAlignment="Left">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0D014A" Offset="0"/>
                        <GradientStop Color="#FF0D014A" Offset="1"/>
                        <GradientStop Color="#FF2308AD" Offset="0.513"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
            </StackPanel>
        </Grid>
        <Grid x:Name="Function" Margin="249,0,0,0">
            <TabControl x:Name="tabController" BorderThickness="0,0,0,0" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <TabControl.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF120067"/>
                        <GradientStop Color="#FF120067" Offset="1"/>
                        <GradientStop Color="#FF2308AD" Offset="0.487"/>
                    </LinearGradientBrush>
                </TabControl.Background>
                <TabItem x:Name="UvodTab" Header="Úvodni Obrazovka">
                    <Grid Name="UvodGrid" Background="White" Margin="0,0,0,0" HorizontalAlignment="Left"/>
                </TabItem>
                <TabItem x:Name="DavkaTab" Header="Optimalní Davka">
                    <Grid Name="DavkaGrid">
                        <Grid Name="DavkaInputGrid" Height="297" MaxHeight="500" VerticalAlignment="Top" UseLayoutRounding="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0*"/>
                                <RowDefinition Height="47*"/>
                                <RowDefinition Height="47*"/>
                                <RowDefinition Height="47*"/>
                                <RowDefinition Height="47*"/>
                                <RowDefinition Height="47*"/>
                                <RowDefinition Height="47*"/>
                                <RowDefinition Height="12*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150*"/>
                                <ColumnDefinition Width="368*"/>
                                <ColumnDefinition Width="150*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource LabelStyle}" x:Name="VelikostDavkyLabel" Content="Celková velikost úkolu/poptávky za období [D]" Height="24" Width="256" Grid.Column="1" Grid.Row="0" Margin="0,5,0,0"/>
                            <Label Style="{StaticResource LabelStyle}" x:Name="NpzLabel" Content="Náklady pro jednu dávku (CZK) [Npz]" Width="256" Grid.Column="1" Grid.Row="1"/>
                            <Label Style="{StaticResource LabelStyle}" x:Name="NsLabel" Content="Celkové náklady na držení zásob (CZK) [Ns]" Width="270" Grid.Column="1" Grid.Row="2"/>
                            <Label Style="{StaticResource LabelStyle}" x:Name="NjLabel" Content="Naklady jednice v dávce (hodnota 1 pokud není jinak) [Nj]" Width="340" Grid.Column="1" Grid.Row="3"/>
                            <Label Style="{StaticResource LabelStyle}" x:Name="ObdobiLabel" Content="Celková velikost úkolu/poptávky za období [D]" Width="292" Grid.Column="1" Grid.Row="4"/>
                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="VelikostDavkyTxb" Text="{Binding Davka}" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"/>
                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="NpzTxb" Text="{Binding Npz}" Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" />
                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="NsTxb" Text="{Binding Ns}" Grid.Column="1"  Grid.Row="3" TextWrapping="Wrap" Height="20" />
                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="NjTxb" Text="{Binding Nj}" Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Height="20"/>
                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="ObdobiTxb" Text="{Binding Obdobi}" Grid.Column="1" Grid.Row="5" TextWrapping="Wrap"/>
                            <Button x:Name="QopqVypocetButton" Command="{Binding VypocitejQoptBt}" Content="Vypočítat" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Top" RenderTransformOrigin="0.122,-0.424" Width="181" Height="31" Background="{x:Null}" BorderBrush="#FF00B3FF" Foreground="White" FontFamily="Roboto" Margin="0,10,0,0"/>
                            <Border BorderThickness="6" Grid.RowSpan="8" Opacity="0.8" Padding="0,0,3,0" Grid.ColumnSpan="3" Margin="146,0,146,0">
                                <Border.BorderBrush>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF0061FF"/>
                                        <GradientStop Color="#FF00A7FF" Offset="1"/>
                                        <GradientStop Color="#FF0010FF" Offset="0.5"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                            </Border>

                        </Grid>
                        <Grid Name="DavkaOutputGrid" RenderTransformOrigin="0.0,0.0" Margin="-3,302,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="DavkaVysledekTextBox" TextWrapping="Wrap" Text="{Binding VysledekQopt}" Foreground="White" BorderBrush="{x:Null}" FontSize="16" FontFamily="Roboto" IsReadOnly="True">
                                <TextBox.Background>
                                    <SolidColorBrush Color="Black" Opacity="0.1"/>
                                </TextBox.Background>
                            </TextBox>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="PrubeznaDobaTab" Header="Průběžná doba">
                    <Grid Name="PrubeznaDobaGrid" Background="White" Width="645" Margin="0,0,0,0" HorizontalAlignment="Right">

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>